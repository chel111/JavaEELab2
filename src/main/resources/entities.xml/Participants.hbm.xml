<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.chel.lab2.entities.Participant" table="participants" schema="horserace">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="raceId">
            <column name="raceId" sql-type="int(11)"/>
        </property>
        <property name="riderId">
            <column name="riderId" sql-type="int(11)"/>
        </property>
        <property name="coeff">
            <column name="coeff" sql-type="double" precision="-1"/>
        </property>
    </class>
</hibernate-mapping>